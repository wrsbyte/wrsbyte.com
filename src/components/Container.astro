---
interface Props {
  tag?: "div" | "section";
  ariaLabel?: string;
  ariaLabelledby?: string;
}
const { tag = "div", ariaLabel, ariaLabelledby } = Astro.props;

const Tag = tag;
---

<Tag
  aria-label={ariaLabel}
  aria-labelledby={ariaLabelledby}
  class="w-full md:max-w-[750px] lg:max-w-[950px] mx-auto px-2"
>
  <slot />
</Tag>
