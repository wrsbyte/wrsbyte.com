---
import Container from "@/components/shared/Container.astro";

const experienceStartDate = new Date("2021-05-01");

const calculateExperienceYears = (startDate: Date) => {
  const currentDate = new Date();
  const years = currentDate.getFullYear() - startDate.getFullYear();

  const months = currentDate.getMonth() - startDate.getMonth();
  const monthsInYears = months / 12;

  return Math.round((years + monthsInYears) * 10) / 10;
};

const experienceYears = calculateExperienceYears(experienceStartDate);

const profile = {
  name: "Wilmer Rodríguez Sánchez",
  role: "Software Engineer",
  description: `+${experienceYears} años de experiencia como Ingeniero de Software. Diseño y creación de software escalable y mantenible, centrado en el usuario. Buscando las soluciones más óptimas a grandes problemas, consciente del contexto. Amante de la ingeniería de software, ciencia de datos y sistemas inteligentes.`,
};
---

<Container tag="section">
  <article class="mb-10 scroll-smooth" id="presentation">
    <h1 class="text-4xl font-grenze mb-2">
      {profile.name}
    </h1>

    <h2 class="text-xl font-georgia italic text-ivory-700">
      {profile.role}
    </h2>

    <hr class="border-t-2 border-ivory-500/20 my-8" />

    <p class="text-lg leading-relaxed">
      {profile.description}
    </p>
  </article>
</Container>
