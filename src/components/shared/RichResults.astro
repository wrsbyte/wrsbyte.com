---
const personSchema = {
  "@context": "https://schema.org",
  "@type": "Person",
  name: "Wilmer Rodríguez Sánchez",
  url: "https://www.tudominio.com",
  image: "https://cdn.tudominio.com/profile.jpg",
  jobTitle: "Software Engineer",
  description:
    "Software Engineer specializing in full-stack development and data science. Building scalable solutions and sharing knowledge through technical blog posts.",
  sameAs: [
    "https://github.com/wrsbyte",
    "https://www.linkedin.com/in/wrsbyte",
    "https://x.com/wrsbyte",
  ],
  knowsAbout: [
    "Software Development",
    "Machine Learning",
    "Web Development",
    "JavaScript",
    "TypeScript",
    "Python",
    "Node.js",
    "Angular",
    "Django",
    "REST APIs",
    "Data Science",
  ],
  alumniOf: {
    "@type": "EducationalOrganization",
    name: "Universidad de Pamplona",
  },
  worksFor: {
    "@type": "Organization",
    name: "SHF S.A.S.",
  },
  address: {
    "@type": "PostalAddress",
    addressCountry: "Colombia",
  },
};

const websiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  name: "Wilmer Rodríguez Sánchez - Portfolio",
  url: "https://www.tudominio.com",
  description:
    "Portfolio and technical blog of Wilmer Rodríguez Sánchez, Software Engineer specializing in full-stack development and data science.",
  author: {
    "@type": "Person",
    name: "Wilmer Rodríguez Sánchez",
  },
  inLanguage: {
    "@type": "Language",
    name: "Spanish",
    alternateName: "es",
  },
};

const blogPostingSchema = (post: any) => ({
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  mainEntityOfPage: {
    "@type": "WebPage",
    "@id": post.url,
  },
  headline: post.title,
  description: post.excerpt,
  datePublished: post.publishedDate,
  dateModified: post.updatedDate,
  author: {
    "@type": "Person",
    name: "Wilmer Rodríguez Sánchez",
  },
  image: post.featuredImage,
  articleBody: post.content,
  keywords: post.tags.join(", "),
  inLanguage: "es",
});

const FAQSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  mainEntity: [
    {
      "@type": "Question",
      name: "¿Qué tecnologías utilizas?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "Tengo experiencia en múltiples tecnologías incluyendo JavaScript/TypeScript, Python, Node.js, Angular, Django, REST APIs, y sistemas de machine learning.",
      },
    },
    {
      "@type": "Question",
      name: "¿Estás disponible para nuevos proyectos?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "Actualmente estoy disponible para oportunidades de trabajo remoto, contratación directa y proyectos freelance.",
      },
    },
    {
      "@type": "Question",
      name: "¿Cómo puedo contactarte?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "Puedes usar el formulario de contacto en esta página o contactarme directamente a través de LinkedIn o GitHub.",
      },
    },
  ],
};
---

<script type="application/ld+json" set:html={JSON.stringify(personSchema)} />
<script type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />
<script type="application/ld+json" set:html={JSON.stringify(FAQSchema)} />

