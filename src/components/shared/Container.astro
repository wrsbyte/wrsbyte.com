---
interface Props {
  tag?: "div" | "section";
  ariaLabel?: string;
  ariaLabelledby?: string;
  className?: string;
}
const { tag = "div", ariaLabel, ariaLabelledby, className } = Astro.props;

const Tag = tag;
---

<Tag
  aria-label={ariaLabel}
  aria-labelledby={ariaLabelledby}
  class:list={[
    "w-full md:max-w-[760px] lg:max-w-[900px] mx-auto px-3 sm:px-5 md:px-7",
    className,
  ]}
>
  <slot />
</Tag>
