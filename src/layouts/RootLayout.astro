---
import SEO from "@/components/shared/SEO.astro";
import { getLangFromUrl } from "@/i18n/utils";
import type { Preload } from "@/types/Preload";
import "@fontsource-variable/jetbrains-mono";
import "@fontsource/grenze";
import "@/styles/global.css";

const lang = getLangFromUrl(Astro.url);

interface Props {
  title: string;
  description: string;
  preload?: Array<Preload>;
  canonical?: string;
  image?: string;
}

const { title, description, preload, canonical, image } = Astro.props;
---

<!doctype html>
<html lang={lang}>
  <head>
    <SEO
      canonical={canonical}
      description={description}
      image={image}
      preload={preload}
      title={title}
    />
  </head>
  <body
    class="antialiased bg-ivory-200 dark:bg-carbon-900 text-carbon-700 dark:text-white selection:bg-ivory-700 dark:selection:bg-carbon-700"
  >
    <slot />
  </body>
</html>
